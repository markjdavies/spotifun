generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model spotifun_config {
  id                          String @id @default(auto()) @map("_id") @db.ObjectId
  ClientId                    String
  ClientSecret                String
  access_token                String
  country_code                String
  featured_album_id           String
  featured_artist_id          String
  featured_artist_playlist_id String
  playlist_id                 String
  refresh_token               String
  user_id                     String

  @@map("spotifun-config")
}
